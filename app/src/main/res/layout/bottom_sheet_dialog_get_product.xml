<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp">

        <View
            android:id="@+id/view_hider"
            android:layout_width="48dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_corners_8dp"
            android:backgroundTint="@color/colorGrayLigth" />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Añadir Producto"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_valueHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Nombre" />

        <EditText
            android:id="@+id/etxt_valor_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_background_1"
            android:ems="10"
            android:hint="Sin especificar*"
            android:inputType="textPersonName"
            android:padding="8dp" />


        <TextView
            android:id="@+id/textView_valueHeader2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Descripción" />

        <EditText
            android:id="@+id/etxt_valor_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_background_1"
            android:ems="10"
            android:hint="Sin especificar*"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textView_valueHeader_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Precio" />

        <EditText
            android:id="@+id/etxt_valor_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_background_1"
            android:ems="10"
            android:hint="Sin especificar*"
            android:inputType="numberDecimal"
            android:padding="8dp" />

        <Button
            android:id="@+id/button_opciones_y_complementos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/colorBlack"
            android:drawableStart="@drawable/ic_baseline_add_24"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorWhite"
            android:text="Agregar opcion y/o complemento"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite" />


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:itemCount="5" />

        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/edittext_background_1"
            android:backgroundTint="@color/colorPrimary"
            android:text="Guardar"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite" />


    </LinearLayout>


</androidx.core.widget.NestedScrollView>

